@model List<Color>

@{
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Color Table</h4>
                    <a asp-action="create" asp-controller="color" class="btn btn-success ">Create Color</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Color color in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            @color.Name
                                        </td>
                                        <td>
                                            <a asp-action="update" asp-controller="color" asp-route-id="@color.Id" class="btn btn-info "> <i class="mdi mdi-pen"></i> </a>
                                            <a asp-action="delete" asp-controller="color" asp-route-id="@color.Id" class="btn btn-danger  "> <i class="mdi mdi-delete"></i> </a>
                                            <a asp-action="details" asp-controller="color" asp-route-id="@color.Id" class="btn btn-secondary "> <i class="mdi mdi-alert-box"></i> </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>