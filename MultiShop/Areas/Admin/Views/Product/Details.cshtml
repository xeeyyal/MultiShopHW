@model Product
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Product Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <div>
                <img width="150px" src="~/assets/img/@Model.ProductImages.FirstOrDefault(p=>p.IsPrimary==true)?.Url">
            </div>
            <dt class="col-sm-3">Product ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Product Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Category.Name</dd>

            <dt class="col-sm-3">Color:</dt>
            <dd class="col-sm-9">
                @foreach (Color color in Model.ProductColors.Select(pc => pc.Color))
                {
                    <span>@color.Name</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>
